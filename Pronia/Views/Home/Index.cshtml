                    <div class="expand-width" data-depth="0.2">
                    @if(slider.Image.StartsWith("http")){

                    <img
                        src="@slider.Image"
                        alt="Inner Image"
                    />
                    }

                    else{
                        <img
                        src="~/assets/images/slider/@slider.Image"
                        alt="Inner Image"
                    />
                    }
                    </div>
                </div>
                </div>
            </div>
            </div>
        </div>
        </div>
    </div>
        }

    </div>
