
@{
    ViewData["Title"] = "Brands";
}

@model IEnumerable<Brand>

<!--CSS -->
<link rel="stylesheet" href="~/assets/css/font-awesome.min.css" />
<link rel="stylesheet" href="~/assets/css/animate.min.css" />
<link rel="stylesheet" href="~/assets/css/swiper-bundle.min.css" />


<!-- Style CSS -->
<link rel="stylesheet" href="~/assets/css/style.css" />
<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Brands</h1>


    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">

            <a class="btn btn-success" asp-area="Manage" asp-controller="Brands" asp-action="Create">Add</a>

            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Link</th>
                            <th></th>
                            <th></th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Brand item in Model)
                        {
                            <tr>
                                <td>
                                    @if (item.Image.StartsWith("http"))
                                    {

                                        <img src="@item.Image" alt="Brand Image" width="40"/>
                                    }

                                    else
                                    {
                                        <img src="~/assets/images/brand/@item.Image" alt="Brand Image" width="40"/>
                                    }
                                </td>
                                <td>@item.Link</td>
                                <td><a class="btn btn-warning" asp-area="Manage" asp-controller="Brands" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                                <td><a class="btn btn-danger" asp-area="Manage" asp-controller="Brands" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                            </tr>
                        }

                    </tbody>
                </table>

                <h3>Demo</h3>
               @* Demo Version*@
                <!-- Begin Brand Area -->
                <div class="brand-area section-space-bottom-100">
                    <div class="container">
                        <div class="brand-bg"
                             data-bg-image="../assets/images/website-images/1-1170x300.jpg">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="swiper-container brand-slider">
                                        <div class="swiper-wrapper">
                                            @foreach (Brand item in Model)
                                            {
                                                <div class="swiper-slide">
                                                    <a class="brand-item" href="@item.Link">
                                                        @if (item.Image.StartsWith("http"))
                                                        {

                                                            <img src="@item.Image" alt="Brand Image" />
                                                        }

                                                        else
                                                        {
                                                            <img src="~/assets/images/brand/@item.Image" alt="Brand Image" />
                                                        }
                                                    </a>
                                                </div>

                                            }

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Brand Area End Here -->

            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->

<script src="~/assets/js/vendor/jquery-3.6.0.min.js"></script>
<script src="~/assets/js/vendor/jquery-migrate-3.3.2.min.js"></script>
<script src="~/assets/js/vendor/jquery.waypoints.js"></script>
<script src="~/assets/js/plugins/wow.min.js"></script>
<script src="~/assets/js/plugins/swiper-bundle.min.js"></script>


<!--Main JS (Common Activation Codes)-->
<script src="~/assets/js/main.js"></script>