
@{
    ViewData["Title"] = "Brand Update";
}

@model CreateBrandVM
<div class="container">
	<div class="row justify-content-center">
		<div class="col-11">
			<h5>Update Brand</h5>
			<form class="user" method="post" enctype="multipart/form-data" >
				<div class="form-group row">
					<div class="col-8 mt-3">
						<input asp-for="Link" type="text" class="form-control form-control-user"
							   placeholder="URL">
						<span asp-validation-for="Link"></span>
					</div>
				</div>
				<div class="form-group row ">
					<div class="col-sm-6 form-group">
						<label asp-for="FileURL" class="d-block">Image URL</label>
						<input asp-for="FileURL" class="form-control form-control-user">

					</div>
					<div class="col-sm-6 form-group">
						<label asp-for="File" class="d-block">Choose Image</label>
						<input asp-for="File" accept="image/*" style="cursor:pointer">

					</div>
					<span class="mx-auto" asp-validation-for="File"></span>
					<span asp-validation-for="FileURL"></span>
				</div>
				<div class="row justify-content-center">

					<div class="col-lg-5 col-sm-12 col-md-10 ">

						<button type="submit" class="btn btn-primary btn-user btn-block">
							Update
						</button>
						<hr>
						<a asp-action="Index" asp-controller="Brands" class="btn btn-google btn-user btn-block">
							Cancel
						</a>
					</div>
				</div>

			</form>

		</div>
	</div>
</div>



