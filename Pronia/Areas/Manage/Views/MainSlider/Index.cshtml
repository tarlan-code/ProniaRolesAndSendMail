@{
	ViewData["Title"] = "Main Slider";
}
@model IEnumerable<MainSlider>

<!-- CSS
============================================ -->
<link rel="stylesheet" href="~/assets/css/font-awesome.min.css" />
<link rel="stylesheet" href="~/assets/css/animate.min.css" />
<link rel="stylesheet" href="~/assets/css/swiper-bundle.min.css" />


<!-- Style CSS -->
<link rel="stylesheet" href="~/assets/css/style.css" />
<!-- Begin Page Content -->
<div class="container-fluid">

	<!-- Page Heading -->
	<h1 class="h3 mb-2 text-gray-800">Main slider</h1>


	<!-- DataTales Example -->
	<div class="card shadow mb-4">
		<div class="card-body">
			<a class="btn btn-success" asp-area="Manage" asp-controller="MainSlider" asp-action="Create">Add</a>
			<div class="table-responsive">
				<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
					<thead>
						<tr>
							<th>Offer</th>
							<th>Title</th>
							<th>Short Description</th>
							<th>Button text</th>
							<th>Image</th>
							<th></th>
							<th></th>

						</tr>
					</thead>
					<tbody>
						@foreach (MainSlider item in Model)
						{
							<tr>
								<td>@item.Offer</td>
								<td>@item.Title</td>
								<td>@item.ShortDesc</td>
								<td>@item.BtnText</td>
								<td>
									@if (item.Image.StartsWith("http"))
									{

										<img src="@item.Image"
									 alt="Inner Image" width="40" height="40" />
									}

									else
									{
										<img src="~/assets/images/slider/@item.Image"
									 alt="Inner Image"  width="40" height="40" />
									}
									 
								</td>
								<td><a class="btn btn-warning" asp-area="Manage" asp-controller="MainSlider" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
								<td><a class="btn btn-danger" asp-area="Manage" asp-controller="MainSlider" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
							</tr>
						}

					</tbody>
				</table>

				<h2 class="h3 mb-2 text-gray-800">Demo</h2>


				@*Demo version*@

					<!-- Main Slider -->
					<div class="swiper-container main-slider swiper-arrow with-bg_white">
						<div class="swiper-wrapper">
							@foreach (MainSlider slider in Model)
							{
								<div class="swiper-slide animation-style-01">
									<div class="slide-inner style-1 bg-height"
									 data-bg-image="/assets/images/slider/bg/1-1.jpg">
										<div class="container">
											<div class="row">
												<div class="col-lg-6 order-2 order-lg-1 align-self-center">
													<div class="slide-content text-black">
														<span class="offer">@slider.Offer % Off</span>
														<h2 class="title">@slider.Title</h2>
														<p class="short-desc">
															@slider.ShortDesc
														</p>
														<div class="btn-wrap">
															<a class="btn btn-custom-size xl-size btn-pronia-primary"
														   asp-controller="SingleProduct" asp-action="Index">@slider.BtnText</a>
														</div>
													</div>
												</div>
												<div class="col-lg-6 col-md-8 offset-md-2 offset-lg-0 order-1 order-lg-2">
													<div class="inner-img">
														<div class="scene fill">
															<div class="expand-width" data-depth="0.2">
																@if (slider.Image.StartsWith("http"))
																{

																	<img src="@slider.Image"
																 alt="Inner Image" />
																}

																else
																{
																	<img src="~/assets/images/slider/@slider.Image"
																 alt="Inner Image" />
																}
															</div>
														</div>
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>
							}

						</div>
						<!-- Add Pagination -->
						<div class="swiper-pagination d-md-none"></div>

						<!-- Add Arrows -->
						<div class="swiper-button-prev"></div>
						<div class="swiper-button-next"></div>
					</div>

			
				<!-- Slider Area End Here -->
		</div>
	</div>
</div>

</div>
<!-- /.container-fluid -->



<script src="~/assets/js/vendor/jquery-3.6.0.min.js"></script>
<script src="~/assets/js/vendor/jquery-migrate-3.3.2.min.js"></script>
<script src="~/assets/js/vendor/jquery.waypoints.js"></script>
<script src="~/assets/js/plugins/wow.min.js"></script>
<script src="~/assets/js/plugins/swiper-bundle.min.js"></script>


<!--Main JS (Common Activation Codes)-->
<script src="~/assets/js/main.js"></script>
