@{
	ViewData["Title"] = "Testimonial Area Update";
}

@model TestimonialArea
<div class="container">
	<div class="row justify-content-center">
		<div class="col-11">
			<h5>Update Testimonial Area</h5>
			<form class="user" method="post">
				<div class="form-group row">
					<div class="col-12 mt-3">
						<input asp-for="Title" type="text" class="form-control form-control-user"
							   placeholder="Title">
						<span asp-validation-for="Title"></span>
					</div>
					<div class="col-12 mt-3">
						<input asp-for="Desc" type="text" class="form-control form-control-user"
							   placeholder="Description">
						<span asp-validation-for="Desc"></span>

					</div>
				</div>



				<div class="row justify-content-center">

					<div class="col-lg-5 col-sm-12 col-md-10 ">

						<button type="submit" class="btn btn-primary btn-user btn-block">
							Update
						</button>
						<hr>
						<a asp-action="Index" asp-controller="TestimonialArea" class="btn btn-google btn-user btn-block">
							Cancel
						</a>
					</div>
				</div>

			</form>

		</div>
	</div>
</div>




