
@{
    ViewData["Title"] = "Category Update";
}


@model Category
<div class="container">
	<div class="row justify-content-center">
		<div class="col-11">
			<h5>Update Category</h5>
			<form class="user" method="post">
				<div class="form-group row">
					<div class="col-12 mt-3">
						<input asp-for="Name" type="text" class="form-control form-control-user"
							   placeholder="Name">
						<span asp-validation-for="Name"></span>
					</div>
				</div>



				<div class="row justify-content-center">

					<div class="col-lg-5 col-sm-12 col-md-10 ">

						<button type="submit" class="btn btn-primary btn-user btn-block">
							Update
						</button>
						<hr>
						<a asp-action="Index" asp-controller="Categories" class="btn btn-google btn-user btn-block">
							Cancel
						</a>
					</div>
				</div>

			</form>

		</div>
	</div>
</div>

