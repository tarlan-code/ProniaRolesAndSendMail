
@{
    ViewData["Title"] = "Banners";
}

@model List<Banner>

<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Banner</h1>
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            @if(Model.Count < 4){
                <a class="btn btn-success" asp-area="Manage" asp-controller="Banners" asp-action="Create" >Add</a>
            }
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Collection</th>
                            <th>Title</th>
                            <th>Button Text</th>
                            <th>Button URL</th>
                            <th>Image</th>
                            <th>Order</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Banner item in Model)
                        {
                            <tr>
                                <td>@item.Collection</td>
                                <td>@item.Title</td>
                                <td>@item.BtnText</td>
                                <td>@item.BtnUrl</td>
                                <td>
                                        @if (item.Image.StartsWith("http"))
									{

										<img src="@item.Image" alt="Banner Image" width="40" height="40" />
									}

									else
									{
										<img src="~/assets/images/banner/@item.Image" alt="Banner Image"  width="40" height="40" />
									}
                                </td>
                                <td>@item.Order</td>
                                <td><a class="btn btn-warning" asp-area="Manage" asp-controller="Banners" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
								<td><a class="btn btn-danger" asp-area="Manage" asp-controller="Banners" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                            </tr>
                        }
                                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- /.container-fluid -->



